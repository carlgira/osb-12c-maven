<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>sbar</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <phases>
                    <install>org.apache.maven.plugins:maven-install-plugin:install</install>
                    <package>nl.whitehorses.servicebus:servicebus-plugin:package</package>
                </phases>
            </configuration>
        </component>
        <component>
            <role>org.codehaus.plexus.archiver.Archiver</role>
            <role-hint>sbar</role-hint>
            <implementation>nl.whitehorses.servicebus.archiver.SbarArchiver</implementation>
            <instantiation-strategy>per-lookup</instantiation-strategy>
        </component>
        <component>
            <role>org.codehaus.plexus.archiver.UnArchiver</role>
            <role-hint>sbar</role-hint>
            <implementation>nl.whitehorses.servicebus.archiver.SbarUnArchiver</implementation>
            <instantiation-strategy>per-lookup</instantiation-strategy>
        </component>
        <component>
            <role>org.codehaus.plexus.components.io.resources.PlexusIoResourceCollection</role>
            <role-hint>sbar</role-hint>
            <implementation>nl.whitehorses.servicebus.archiver.PlexusIoSbarFileResourceCollection</implementation>
            <instantiation-strategy>per-lookup</instantiation-strategy>
        </component>
    </components>
</component-set>
